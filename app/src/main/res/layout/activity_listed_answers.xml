<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_listed_answers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.julisarrelli.mcdonaldstest.ListedAnswers"
    android:background="?android:attr/windowBackground">

    <TextView
        android:text="Formulario:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/form"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="formname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/id_form"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/form"
        android:layout_toEndOf="@+id/form"
        android:textStyle="normal|italic" />

    <TextView
        android:text="username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user"
        android:layout_toRightOf="@+id/user"
        android:layout_toEndOf="@+id/user"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:id="@+id/id_user"
        android:textStyle="normal|italic" />

    <TextView
        android:text="Fecha: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:id="@+id/date"
        android:textStyle="normal|bold" />

    <TextView
        android:text="fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/date"
        android:layout_alignLeft="@+id/id_user"
        android:layout_alignStart="@+id/id_user"
        android:id="@+id/id_date"
        android:textStyle="normal|italic" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textColor1"
        android:id="@+id/listview5"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_local"
        android:layout_below="@+id/local"
        android:layout_alignRight="@+id/local"
        android:layout_alignEnd="@+id/local"
        android:textStyle="normal|italic" />

    <TextView
        android:text="User: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user"
        android:layout_below="@+id/local"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Local: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp"
        android:id="@+id/local"
        android:layout_below="@+id/id_form"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold" />


</RelativeLayout>
